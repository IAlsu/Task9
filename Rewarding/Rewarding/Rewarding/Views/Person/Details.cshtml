@using Rewarding.Models
@model Rewarding.Models.Person

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Person/_LayoutPerson.cshtml";
}

@section styles{
    @System.Web.Optimization.Styles.Render("~/Content/css")
}

@section breadcrumps{
    You are here: @Html.MvcSiteMap().SiteMapPath()
}

<h2>Details</h2>

<div>
    <h4>Person</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Birthdate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Birthdate)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Age)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Age)
        </dd>

        <dt>
            Rewards
        </dt>
        <dd>
            <ul>
                @foreach (Reward item in Model.Rewards)
                {
                    <li>@item.Title</li>
                }
            </ul>
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Photo)
        </dt>

        <dd>
            @if (Model.PhotoId == null)
            {
                <div class="form-control-static">No photo</div>
            }
            else
            {
                <img class="img-thumbnail" width="150" height="150"
                     src="@Url.Action("GetImage", "Images",
                        new {imageId = Model.PhotoId })" />
            }
        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>

@section scripts {
    <script src="~/Scripts/bootstrap.min.js"></script>
}
